.header
    z-index 50
    padding 0 30px
    height 100px
    display flex
    justify-content space-between
    font-family "Proxima Nova"
    font-size 25px
    color #181818
    @media(max-width: $xl)
        font-size 20px
    @media(max-width: $sm)
        padding 0
    span
        @media(min-width: $sm)
            display block 
    &__menu
        margin-bottom 0
        display flex
        list-style-type none
        order 1
        &Item
            background-color #fff
            display flex
            padding 0 24px
            align-items center
            a
                color #000 !important
                &:hover
                    color #28b7bb !important
            @media(max-width: $lg)
                padding 0 10px
            @media(max-width: $md)
                padding 0 5px                
    &__img
        margin 20px
        display flex
        width 58px
        height 58px
        &_flag
            width 31px
            height 31px
    &__logo
        order 1
        display flex
        align-items center
        @media(max-width: $sm)
            border-left 1px solid #e2e2e2
            border-right 1px solid #e2e2e2
    &__span
        flex-direction column    
    &__lang
        order 1
        display flex
        align-self center
        &:before
            content ''
            background  url('../images/lang_before.png') 
            position absolute
            width 1px
            height 31px
            margin-left -35px
            margin-top 22px
.mobileBtn
    display flex
    align-self center
    order 0
    position relative
    z-index 10002
    width 30px
    height 35px
    cursor pointer
    margin 30px
    @media (min-width: $sm)
        display none
.mobileBtn
    span
        display block
        position absolute
        top 16px
        left 0
        height 2px
        width 100%
        background #000
        transition all 0.3s

.mobileBtn span:before, .mobileBtn span:after
    position absolute
    display block
    left 0
    width 100%
    height 2px
    background-color #000
    content ""
    transition all 0.3s

.mobileBtn span:before 
    top -8px

.mobileBtn span:after 
    bottom -8px

.mobileBtnhover span:before 
    top -9px

.mobileBtnhover span:after 
    bottom -9px

.mobileBtn.active span
    background transparent

.mobileBtn.active span:before 
    top 0
    transform rotate(45deg)


.mobileBtn.active span:after
    bottom 0
    transform rotate(-45deg)
@media (max-width: $sm)
    .header
        height 58px
        font-size 18px
        position fixed
        background-color #fff
        width 100%
        &__img
            &_logo
                width 31px
                height 31px
            &_flag
                width 24px
                height 24px 
                align-self center 
                margin 0 20px         
        &__logo
            flex-basis 70% 
        &__lang:before
            content none        
        &__menu
            flex-direction column
            position fixed
            z-index 10000
            width 100%
            height 100vh
            margin 0
            transition right .8s
            top 0
            padding-top 20px
            text-align center
            align-items flex-start
            flex-wrap wrap
            &Item
                margin 10px 20px
                padding 0 20px 20px 20px
                width 80%
                border-bottom 1px solid #dbdbdb
                &:nth-child(5)
                    border none
                a
                    font-size 18px
                    font-weight 400
                    &:before
                        font: 14px/1 FontAwesome
                        content '\f054'
                        position absolute
                        height 10px
                        width 10px
                        margin-left 220px
                        margin-top 5px
            &.topnav
                display none
            &.active
                display flex
                flex-direction column
                width 320px
                height 350px
                margin-top 58px
                padding-left 0
                background-color #fff


