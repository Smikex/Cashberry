.video
    background url('../images/bg_video.jpg')
    padding 80px 0
    display flex
    justify-content center
    &__content
        padding-bottom 30%
        position relative
        @media (max-width $sm)
            padding-bottom 0
    iframe
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        @media (max-width $sm)
            position relative
           
