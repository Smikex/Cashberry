.footer
	padding 100px 0  
	background-color #f5f5f5
	@media(max-width: $xs)
		padding 30px 0
	.container
		display block
		@media(max-width: $xs)
			padding 0
	&__wrap
		display flex
		justify-content space-between
		flex-wrap wrap
		@media(max-width: $xs)
			justify-content space-around		
	&__title
		font-family "Proxima Nova"
		font-size 25px
		font-weight 400	
	&Rights
		display flex
		flex-direction column
		font-size 13px
		font-weight 400
		@media(max-width: $md)
			flex-basis 100%
			order 4	
			padding-top 30px
		@media(max-width: $xs)
			padding 30px	
	&Community
		display flex
		flex-direction column
		@media(max-width: $md)
			flex-basis 30%
		li
			padding-top 10px
		img
			margin 0 5px	
		&__link
			font-size 14px
			font-weight 400
			span
				width 20px
				margin-right 10px
				display inline-block
	&About, &Sibscribe
		li
			padding-top 10px	
		@media(max-width: $md)
			flex-basis 30%
			display flex
			flex-direction column
	&Sibscribe
		@media(max-width: $xs)
			padding 30px
			background-color #e9e9e9
			flex-basis 100%

	&Form
		// @media(max-width: $xs)
		// 	display flex
		&__input
			// @media(max-width: $xs)
			// 	flex-basis 40%
			&:before
				content ''
				position absolute
				background url('../images/mail_ico.png')
				width 18px
				height 13px
				margin-top 16px
				margin-left 220px
			input 
				width 262px
				height 45px
				border none
				// @media(max-width: $xs)
				// 	width auto
				&[placeholder]
					padding-left 10px
					font-size 13px
		&__button
			margin-top 25px
			background-image linear-gradient(to right, #27bbc0 0%, #623abf 100%)
			font-size 14px
			font-weight 700
			line-height 25px
			color #fff
			border none
			padding 10px 45px 10px 25px
			border-radius 3px
			// @media(max-width: $xs)
			// 	margin-top 0
			// 	flex-basis 40%
			&:after
				content ''
				position absolute
				background url('../images/rect_ico.png')
				width 6px
				height 10px
				margin-top 7px
				margin-left 15px

