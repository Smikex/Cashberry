.community
    display flex
    background-color #222a3f
    padding 55px 0
    &Wrap
        justify-content space-between
        flex-wrap wrap
    &__title
        display flex
        font-family "Proxima Nova"
        font-size 35px
        font-weight 700
        color #ffffff
        @media (max-width: $sm)
            flex-basis 100%
            justify-content center
    &Social
        display flex
        @media (max-width: $sm)
            padding 25px
            flex-basis 100%
            justify-content center
            flex-wrap wrap
        &__ico
            margin 0 5px
            width 48px
            height 48px
            &_facebook
                background-image url('../images/sprite.png')
            &_twitter
                background-image url('../images/sprite.png')
                background-position: 48px 0px
            &_linkedin    
                background-image url('../images/sprite.png')
                background-position: -115px 0px 
            &_instagram    
                background-image url('../images/sprite.png')
                background-position: -172px 0px
            &_telegram    
                background-image url('../images/sprite.png')
                background-position: -229px 0px
            &_vimeo    
                background-image url('../images/sprite.png')
                background-position: -286px 0px
            &_pinterest    
                background-image url('../images/sprite.png')
                background-position: -343px 0px
    &Feed
        display flex
        @media (max-width: $sm)
            flex-basis 100%
            align-items center
            justify-content center
        &__link
            color #ffffff
            font-family "Proxima Nova"
            font-size 25px
            font-weight 400
            text-align center
        &_img
            margin 0 15px         